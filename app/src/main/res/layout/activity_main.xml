            android:id="@+id/test8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FF4081"
            android:text="Test 8"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/test9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Test 9" />

        <Button
            android:id="@+id/test10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Test 10" />
    </LinearLayout>

